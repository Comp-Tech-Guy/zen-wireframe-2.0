{
  "manifest_version": "1",
  "name": "Wireframe",
  "description": "A minimal, squared-off theme for Zen Browser",
  "version": "1.0.0",
  "author": "sehaz",
  "preferences": {
    "zen.view.use-single-toolbar": {
      "type": "boolean",
      "default": false,
      "description": "Use single toolbar layout"
    },
    "wireframe.animations.enabled": {
      "type": "boolean",
      "default": false,
      "description": "Enable animations in Wireframe theme"
    },
    "wireframe.borders.squared": {
      "type": "boolean",
      "default": true,
      "description": "Use squared borders"
    },
    "wireframe.urlbar.position.top": {
      "type": "boolean",
      "default": false,
      "description": "Position URL bar at the top (for multiple and collapsed toolbar only)"
    },
    "wireframe.webview.border_radius": {
      "type": "string",
      "default": "0px",
      "description": "Border radius for webview (e.g., 0px, 4px, 8px, 12px)"
    },
    "wireframe.colorscheme": {
      "type": "string",
      "default": "light",
      "enum": ["light", "dark"],
      "description": "Color scheme for the theme"
    }
  }
}